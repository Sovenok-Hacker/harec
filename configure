#!/bin/sh -e
srcdir=${SRCDIR:-$(dirname "$0")}

eval ". $srcdir/config.sh"

harec() {
	headers \
		"asan.h" \
		"ast.h" \
		"check.h" \
		"emit.h" \
		"eval.h" \
		"expr.h" \
		"gen.h" \
		"identifier.h" \
		"lex.h" \
		"mod.h" \
		"parse.h" \
		"qbe.h" \
		"scope.h" \
		"type_store.h" \
		"typedef.h" \
		"types.h" \
		"utf8.h" \
		"util.h"
	genrules harec \
		src/asan.c \
		src/check.c \
		src/emit.c \
		src/eval.c \
		src/gen.c \
		src/genutil.c \
		src/identifier.c \
		src/lex.c \
		src/main.c \
		src/mod.c \
		src/parse.c \
		src/qbe.c \
		src/qinstr.c \
		src/qtype.c \
		src/scope.c \
		src/type_store.c \
		src/typedef.c \
		src/types.c \
		src/utf8.c \
		src/util.c
}

all="harec"

subdir rt
subdir tests

run_configure
